<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.musicap.GUIs.PremiumViewController">
    <VBox alignment="CENTER" spacing="20.0" styleClass="root-pane">
        <Label text="Get Premium" styleClass="header-label" />
        <VBox spacing="20">
            <HBox alignment="CENTER" spacing="20" styleClass="plan-box">
                <VBox alignment="CENTER" spacing="10">
                    <Label fx:id="plan1Name" styleClass="plan-name" />
                    <Label fx:id="plan1Text" styleClass="plan-price" />
                    <Button text="Get it now!" onMouseClicked="#getPlan1" styleClass="select-button" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="20" styleClass="plan-box">
                <VBox alignment="CENTER" spacing="10">
                    <Label fx:id="plan2Name" styleClass="plan-name" />
                    <Label fx:id="plan2Text" styleClass="plan-price" />
                    <Button text="Get it now!" onMouseClicked="#getPlan2" styleClass="select-button" />
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="20" styleClass="plan-box">
                <VBox alignment="CENTER" spacing="10">
                    <Label fx:id="plan3Name" styleClass="plan-name" />
                    <Label fx:id="plan3Text" styleClass="plan-price" />
                    <Button text="Get it now!" onMouseClicked="#getPlan3" styleClass="select-button" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
