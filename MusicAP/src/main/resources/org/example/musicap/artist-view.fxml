<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="mainBody" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.musicap.GUIs.ArtistViewController">
    <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="root-pane">
        <HBox alignment="CENTER" spacing="10">
            <Label fx:id="artistNameLabel" styleClass="artist-name-label" />
            <Button onMouseClicked="#addToFollowers" styleClass="action-button" text="Follow" />
            <Button onMouseClicked="#addReport" styleClass="action-button" text="Report" />
            <Label fx:id="followedLabel" />
        </HBox>
        <HBox alignment="TOP_LEFT" prefHeight="400" prefWidth="621.0" spacing="20" styleClass="content-box">
            <VBox spacing="10">
                <Label styleClass="section-label" text="Biography" />
                <Label fx:id="biographyLabel" styleClass="info-label" />
                <Label styleClass="section-label" text="Followers Count" />
                <Label fx:id="followersCountLabel" styleClass="info-label" />
                <Label styleClass="section-label" text="Plays Count" />
                <Label fx:id="playsCountLabel" styleClass="info-label" />
            </VBox>
            <ListView onMouseClicked="#showAudio" fx:id="songsListView" prefHeight="200.0" prefWidth="200.0" />
            <AnchorPane fx:id="reportPane">

            </AnchorPane>
        </HBox>
    </VBox>
</AnchorPane>
