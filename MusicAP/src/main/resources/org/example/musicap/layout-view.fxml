<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.musicap.GUIs.LayoutViewController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <top>
        <HBox id="top-container" prefHeight="33.0" prefWidth="675.0" spacing="10">
            <Label fx:id="loginButton" alignment="CENTER" onMouseClicked="#login" prefHeight="31.0" prefWidth="63.0" text="Login" />
            <Label fx:id="signUpButton" alignment="CENTER" onMouseClicked="#signup" prefHeight="31.0" prefWidth="72.0" text="Sign Up" />
            <Label fx:id="logoutButton" alignment="CENTER" onMouseClicked="#logout" prefHeight="31.0" prefWidth="72.0" text="Logout" />
            <Label fx:id="backToButton" alignment="CENTER" onMouseClicked="#backTo" prefHeight="31.0" prefWidth="72.0" text="Back" />
        </HBox>
    </top>

    <left>
        <VBox id="left-container" prefHeight="434.0" prefWidth="105.0">

            <Label fx:id="homeLabel" alignment="CENTER" onMouseClicked="#homeLabelClick" prefHeight="50.0" prefWidth="105.0" text="Home" />
            <Label fx:id="libraryLabel" alignment="CENTER" onMouseClicked="#libraryLabelClick" prefHeight="50.0" prefWidth="105.0" text="Library" />
            <Label fx:id="artistsLabel" alignment="CENTER" onMouseClicked="#artistsLabelClick" prefHeight="50.0" prefWidth="105.0" text="Artists" />
            <Label fx:id="audiosLabel" alignment="CENTER" onMouseClicked="#audiosLabelClick" prefHeight="50.0" prefWidth="105.0" text="Audios" />
            <HBox>
                <TextField fx:id="searchField" alignment="CENTER" prefHeight="35.0" prefWidth="72.0" promptText="Search..." />
                <Button fx:id="searchButton" alignment="CENTER" maxHeight="41.0" maxWidth="33.0" minHeight="33.0" minWidth="32.0" onAction="#search" prefHeight="41.0" prefWidth="32.0">
