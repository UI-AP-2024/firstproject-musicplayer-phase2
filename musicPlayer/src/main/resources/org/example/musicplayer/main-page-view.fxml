<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.musicplayer.MainPageController">


    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 10px;">
            <Label contentDisplay="CENTER" prefHeight="36.0" prefWidth="99.0" style="-fx-text-fill: #9b59b6; -fx-font-size: 16px;" text="Mohsenify" textFill="#d34dff" HBox.hgrow="ALWAYS">
            <font>
               <Font name="System Bold Italic" size="21.0" />
            </font></Label>
            <Button prefHeight="30" prefWidth="100" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" text="Login" />
            <Button prefHeight="30" prefWidth="100" style="-fx-background-color: #9b59b6; -fx-text-fill: white;" text="Sign In" />
        </HBox>
    </top>


    <left>
        <VBox prefWidth="200" spacing="15" style="-fx-background-color: #1a1a1a; -fx-padding: 20px;">
            <Button prefHeight="7.0" prefWidth="122.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;" text="Home" />
            <Button prefHeight="7.0" prefWidth="122.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;" text="Search" />
            <Button prefHeight="7.0" prefWidth="122.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;" text="Library" />
            <Button prefHeight="7.0" prefWidth="122.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;" text="All Artists" />
            <Button prefHeight="7.0" prefWidth="122.0" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px;" text="All Audios" />
        </VBox>
    </left>


    <center>
        <ScrollPane style="-fx-background-color: #1a1a1a;">
            <VBox spacing="10" style="-fx-padding: 10;">

                <Label style="-fx-text-fill: #9b59b6; -fx-font-size: 24px;" text="Welcome to My Music Player" />
                <TextField promptText="Search for songs or artists" style="-fx-background-color: #2e2e2e; -fx-text-fill: white; -fx-prompt-text-fill: #9b59b6;" />

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
