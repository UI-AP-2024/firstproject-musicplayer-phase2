<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.musicap.GUIs.GenresViewController">
    <VBox alignment="CENTER" spacing="20.0" styleClass="root-pane">
        <Label text="Select Your Favorite Genres" styleClass="header-label" />
        <GridPane fx:id="gridPane" hgap="10" vgap="10" styleClass="genres-grid">
        </GridPane>
        <HBox alignment="CENTER" spacing="10.0">
            <Button text="Submit" onAction="#handleSubmitButtonAction" styleClass="submit-button" />
        </HBox>
    </VBox>
</AnchorPane>
