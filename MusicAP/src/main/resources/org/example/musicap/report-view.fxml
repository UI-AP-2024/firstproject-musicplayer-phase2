<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainBody" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.musicap.GUIs.ReportViewController">
    <VBox alignment="CENTER" spacing="20.0" styleClass="root-pane">
        <TextArea fx:id="reportTextArea" promptText="What do you want to report?" styleClass="report-text-area" />
        <Button text="Submit Report" onMouseClicked="#addReport" styleClass="submit-button" />
    </VBox>
</AnchorPane>
