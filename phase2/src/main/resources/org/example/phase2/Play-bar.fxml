<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" prefHeight="120.0" prefWidth="800.0" style="-fx-background-color: #1c1c1c;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.phase2.PlayBar">
   <children>
      <ImageView fx:id="playOrPause" fitHeight="45.0" fitWidth="45.0" layoutX="368.0" layoutY="61.0" onMouseClicked="#playAction" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@photos/play%20icon.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="previous" fitHeight="62.0" fitWidth="62.0" layoutX="259.0" layoutY="61.0" onMouseClicked="#previousAction" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@photos/next%20or%20previous.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="next" fitHeight="62.0" fitWidth="62.0" layoutX="459.0" layoutY="61.0" onMouseClicked="#nextAction" pickOnBounds="true" preserveRatio="true" rotate="180.0">
         <image>
            <Image url="@photos/next%20or%20previous.jpg" />
         </image>
      </ImageView>
      <Label fx:id="audioName" alignment="CENTER" layoutX="291.0" layoutY="9.0" prefHeight="50.0" prefWidth="200.0" text="Audio name " textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
