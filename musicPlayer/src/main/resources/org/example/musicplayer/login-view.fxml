<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="anhor" alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.musicplayer.LoginController">
   <children>
      <Label alignment="CENTER" text="Login">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="tf_username" maxWidth="-Infinity" prefHeight="26.0" prefWidth="192.0" promptText="username" />
      <TextField fx:id="tf_pass" maxWidth="-Infinity" prefHeight="26.0" prefWidth="190.0" promptText="password" />
      <Button fx:id="btn_login" mnemonicParsing="false" onAction="#login" text="Login">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Button>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="new to this music player ? " />
            <Button fx:id="btn_signIn" mnemonicParsing="false" onAction="#signIn" text="Sign in now" />
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
</VBox>
