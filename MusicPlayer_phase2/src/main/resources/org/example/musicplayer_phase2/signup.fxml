<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.musicplayer_phase2.View.Signingup.SignupView">
   <children>
      <Button fx:id="backButton" layoutX="486.0" layoutY="361.0" mnemonicParsing="false" onMouseClicked="#backButtonClicked" prefHeight="25.0" prefWidth="100.0" text="back" />
      <VBox fx:id="vbox_register" alignment="CENTER" layoutX="124.0" layoutY="100.0" prefHeight="200.0" prefWidth="353.0">
         <children>
            <SplitMenuButton fx:id="userTypeMenu" alignment="CENTER" mnemonicParsing="false" prefHeight="58.0" prefWidth="408.0" text="User type">
              <items>
                <MenuItem fx:id="listenerItem" mnemonicParsing="false" onAction="#listenerItemAction" text="Listener" />
                <MenuItem fx:id="singerItem" mnemonicParsing="false" onAction="#singerItemAction" text="Singer" />
                  <MenuItem fx:id="podcasterItem" mnemonicParsing="false" onAction="#podcasterItemAction" text="Podcaster" />
              </items>
            </SplitMenuButton>
            <Button fx:id="registerButton" mnemonicParsing="false" onMouseClicked="#registerButtonClicked" text="register">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
