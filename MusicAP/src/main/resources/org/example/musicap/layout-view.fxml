            </Button>
            <Button fx:id="nextButton" layoutX="424.0" layoutY="78.0" maxHeight="35.0" maxWidth="35.0" minHeight="35.0" minWidth="35.0" onAction="#nextMusic">
                <graphic>
                    <SVGPath content="M438.6 278.6c12.5-12.5 12.5-32.8 0-45.3l-160-160c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L338.8 224 32 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l306.7 0L233.4 393.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0l160-160z" fill="white" scaleX="0.04" scaleY="0.04" />
                </graphic>
            </Button>
            <Slider fx:id="timeSlider" layoutX="152.0" layoutY="47.0" prefHeight="16.0" prefWidth="496.0" />
            <Label fx:id="nameLabel" layoutX="24.0" layoutY="86.0" onMouseClicked="#navigateToSongPage" text="Song Name" />
            <Label fx:id="timeLabel" layoutX="152.0" layoutY="86.0" text="10:10" />
            <Label fx:id="leftTimeLabel" layoutX="604.0" layoutY="86.0" text="10:11" />

            <ImageView fx:id="audioImage" fitHeight="59.0" fitWidth="70.0" layoutX="29.0" layoutY="18.0" onMouseClicked="#navigateToSongPage" pickOnBounds="true" preserveRatio="true" />

        </AnchorPane>
    </bottom>
   <center>
      <AnchorPane fx:id="mainBody" prefHeight="352.0" prefWidth="695.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
