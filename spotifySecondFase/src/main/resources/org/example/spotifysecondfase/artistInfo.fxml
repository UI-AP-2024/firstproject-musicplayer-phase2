            <Font size="13.0" />
         </font>
      </Label>
      <Label fx:id="bioLbl" layoutX="197.0" layoutY="264.0" prefHeight="30.0" prefWidth="80.0" text="About" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Button fx:id="reportButton" layoutX="287.0" layoutY="208.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="70.0" style="-fx-background-color: black; -fx-border-color: white; -fx-border-radius: 20px;" text="Report" textFill="WHITE">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <VBox fx:id="artistAudios" layoutX="489.0" layoutY="319.0" prefHeight="238.0" prefWidth="262.0" />
